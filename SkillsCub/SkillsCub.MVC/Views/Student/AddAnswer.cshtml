@model SkillsCub.MVC.ViewModels.AnswerViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section>
    <div class="section-body contain-lg">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-tiles">
                    <div class="row style-primary">
                        <div class="col-sm-12">
                            <div class="card-body style-default-dark">
                                <h2>@Model.Exercise.Name</h2>
                                <div class="opacity-75">C @Model.Exercise.OpenDateTime.Date.ToString("D") по @Model.Exercise.CloseDateTime.Date.ToString("D")</div>
                            </div>
                        </div><!--end .col -->
                    </div><!--end .row -->

                    <div class="row">
                        <div class="col-md-12">
                            <article class="style-default-bright">
                                <div class="card-body">
                                    @Html.Raw(Model.Exercise.ConditionOfProblem)
                                </div><!--end .card-body -->
                                
                                <form asp-action="AddAnswer" method="post" class="well clearfix">
                                    <h4>Введите ответ</h4>
                                    @Html.HiddenFor(model => model.Answer.ExerciseId)
                                    @Html.HiddenFor(model => model.Answer.UserId)
                                    @Html.HiddenFor(model => model.Answer.Id)

                                    @Html.TextAreaFor(model => model.Answer.Value, new { id = "summernote" })
                                    <button class="btn btn-default" type="submit">Подтвердить</button>
                                </form>
                            </article>
                        </div><!--end .col -->
                    </div><!--end .row -->
                </div>
            </div>
        </div>
    </div>

</section>
@section Css
{
    <link type="text/css" rel="stylesheet" href="~/css/theme-default/libs/summernote/summernote.css" />
    <link type="text/css" rel="stylesheet" href="~/css/theme-default/libs/jquery-ui/jquery-ui-theme.css" />
}
@section Scripts
{
    <script src="~/js/libs/summernote/summernote.min.js"></script>
    <script src="~/js/core/demo/DemoFormEditors.js"></script>
}
