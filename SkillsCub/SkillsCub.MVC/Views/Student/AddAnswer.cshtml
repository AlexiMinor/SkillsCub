@model SkillsCub.MVC.ViewModels.StudentExerciseDetailsViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section>
    <div class="section-body contain-lg">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-tiles">
                    <div class="row style-primary">
                        <div class="col-sm-12">
                            <div class="card-body style-default-dark">
                                <h2>@Model.Exercise.Name</h2>
                                <div class="opacity-75">C @Model.Exercise.OpenDateTime.Date.ToString("D") по @Model.Exercise.CloseDateTime.Date.ToString("D")</div>
                            </div>
                        </div><!--end .col -->
                    </div><!--end .row -->

                    <div class="row">
                        <div class="col-md-12">
                            <article class="style-default-bright">
                                <div class="card-body">
                                    @Html.Raw(Model.Exercise.ConditionOfProblem)
                                </div><!--end .card-body -->
                                @if (Model.AttachedFiles != null && Model.AttachedFiles.Any())
                                {
                                    <div class="card-body">
                                        <h4>Прикрепленные файлы</h4>
                                        @foreach (var attach in Model.AttachedFiles)
                                        {
                                            <div class="row" id="row-@attach.FileName">
                                                <div class="col-sm-12 col-md-10">
                                                    <p>
                                                        <i class="md md-attach-file"></i>@attach.FileName
                                                    </p>
                                                </div>
                                                <div class="col-sm-12 col-md-2">
                                                    <a asp-controller="File" asp-action="Download" asp-route-filename="@attach.FileName" asp-route-exerciseId="@Model.Exercise.Id" target="_blank" class="btn ink-reaction btn-default-light">Download</a>
                                                </div>
                                                <hr class="special-hr"/>
                                            </div>
                                        }
                                    </div>
                                }

                                <div class="card-actionbar">
                                    <form asp-action="AddAnswer" method="post" class="well clearfix">
                                        <h4>Введите ответ</h4>
                                        @Html.HiddenFor(model => model.Exercise.Id)

                                        @Html.TextAreaFor(model => model.Exercise.AnswerValue, new { id = "summernote" })
                                        <button class="btn btn-default" type="submit">Подтвердить</button>
                                    </form>
                                </div><!--end .card-body -->
                            </article>
                        </div><!--end .col -->
                    </div><!--end .row -->
                </div>
            </div>
        </div>
    </div>

</section>
@section Css
    {
    <link type="text/css" rel="stylesheet" href="~/css/theme-default/libs/summernote/summernote.css" />
    <link type="text/css" rel="stylesheet" href="~/css/theme-default/libs/jquery-ui/jquery-ui-theme.css" />
}
@section Scripts
    {
    <script src="~/js/libs/summernote/summernote.min.js"></script>
    <script src="~/js/core/demo/DemoFormEditors.js"></script>
}
