@model SkillsCub.MVC.ViewModels.ExerciseAnswersViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section>
    <div class="section-body">
        <div class="container">
            <h2 class="text-light text-center">@Model.Exercise.Name</h2>
            <br>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-tiles style-default-light">
                        <div class="row">
                            <div class="col-sm-12">
                                <article>
                                    <div class="card-body style-default-dark">
                                        <h2>@Model.Exercise.Name</h2>
                                        <div class="opacity-50">
                                            C @Model.Exercise.OpenDateTime.Date.ToString("D") по @Model.Exercise.CloseDateTime.Date.ToString("D")
                                        </div>
                                    </div>
                                    <div class="card-body style-default-bright">
                                        @Html.Raw(Model.Exercise.ConditionOfProblem)
                                    </div>
                                </article><!-- end article -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Answers != null && Model.Answers.Any())
            {
                <div class="row">
                    <div class="col-xs-11 col-md-10 col-md-offset-1">
                        <ul class="list-comments">
                            @foreach (var answer in Model.Answers)
                            {
                                <li>
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="comment-title">@answer.User.FirstName @answer.User.Patronymic @answer.User.LastName <small>@answer.AnswerDateTime.ToString("G")</small></h4>
                                            <a asp-action="AddMarkForAnswer" asp-route-ansId="@answer.ID" class="btn btn-default-dark stick-top-right">Оценить</a>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div><!--end .container -->
    </div>
</section>